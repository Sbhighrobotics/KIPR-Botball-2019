#include <kipr/botball.h>
int speed = 2000;
int leftMotor = 1;
int rightMotor = 0;
int highGrey= 2555;
int lowBlack = 3730;

void follow();
void goTillBlack();
void turnTillGrey();
void followCamera();
void goForward(int time);
void turnLeft(int time);


